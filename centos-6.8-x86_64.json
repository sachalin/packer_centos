{
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-6.8-x86_64-{{build_type}}",
    "vm_name": "packer-centos-6.8-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.8/anaconda-ks.cfg",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "RedHat_64",
    "iso_url": "{{user `mirror`}}/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-6.8-x86_64-{{build_type}}",
    "vm_name": "packer-centos-6.8-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.8/anaconda-ks.cfg",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "shutdown_command": "sudo poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }, {
    "type": "vmware-iso",
    "guest_os_type": "centos-64",
    "iso_url": "{{user `mirror`}}/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "output-centos-6.8-x86_64-{{build_type}}",
    "vm_name": "packer-centos-6.8-x86_64",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc>",
      "<wait>",
      "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos-6.8/anaconda-ks.cfg",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "tools_upload_flavor": "linux",
    "shutdown_command": "sudo poweroff",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    }
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "scripts/centos-6.8/repo.sh",
      "scripts/centos/virtualbox.sh",
      "scripts/centos/vmware.sh",
      "scripts/centos-6.8/init.sh",
      "scripts/common/vagrant.sh",
      "scripts/common/sshd.sh",
      "scripts/centos-6.8/locale.sh",
      "scripts/centos-6.8/cleanup.sh",
      "scripts/common/minimize.sh",
      "scripts/cloudstack/autoinstall_cloudstack_4.8.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "{{user `compression_level`}}",
    "output": "centos-6.8-x86_64-{{.Provider}}.box"
  }],
  "variables": {
    "compression_level": "6",
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "ec49c297d484b9da0787e5944edc38f7c70f21c0f6a60178d8e9a8926d1949f4",
    "iso_checksum_type": "sha256",
    "memory": "768",
    "mirror": "http://mirrors.kernel.org/centos",
    "ssh_timeout": "60m"
  }
}
